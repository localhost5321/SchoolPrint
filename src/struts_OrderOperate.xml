<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
		<package name="order" extends="struts-default">
		<!-- 计算订单价格信息 展示订单的Action-->
		<action name="showOrder" class="com.schoolo2o.action.OrderAction"
			method="showOrder">
		</action>
		<!-- 保存订单 -->
		<action name="saveOrder" class="com.schoolo2o.action.OrderAction"
			method="saveOrder">
		</action>
		<!-- 修改订单状态 -->
		<action name="editOrderStatus" class="com.schoolo2o.action.OrderAction"
			method="editOrderStatus">
		</action>
		<!-- 获得一个用户的地址列表 -->
		<action name="getAllAddress" class="com.schoolo2o.action.OrderAction"
		method="getAllAddress"></action>
		
		<!-- 修改地址是否为默认地址 -->
		<action name="setDefault" class="com.schoolo2o.action.OrderAction"
		method="setDefault"></action>
		
		
		<!-- 根据一个地址Id删除其地址信息 -->
		<action name="deleteAddressinfo" class="com.schoolo2o.action.OrderAction"
		method="deleteAddressinfo"></action>
		
		
		<!--更新或者新增一个地址信息  -->
		<action name="addOrUpdateAddressinfo" class="com.schoolo2o.action.OrderAction"
		method="addOrUpdateAddressinfo"></action>
		
	</package>
</struts>